<div class="col-md-12">

  <h2>我加入的讨论组</h2>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Titel</th>
        <th>Description</th>
        <th>Post count</th>
        <th>Last update</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group))%></td>
          <td><%= render_group_description(group) %></td>
          <td><%= group.posts.count %></td>
          <td><%= group.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
